<div class="ui container">
    <div class="ui middle aligned center aligned grid" style="height: 80vh;">
      <div class="column" style="max-width: 50rem;">
        <h2 class="ui teal image header">
          <div class="content">
            Log-in to your account
          </div>
        </h2>
          <div class="ui stacked segment">
            <%= form_for(:session, html: {class:"ui form", role:"form"}, url: login_path) do |f|%>
            <div class="field">
                <%= f.label :username %>
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <%= f.text_field :username, placeholder: "Username" %>
                </div>
            </div>
            <div class="field">
                <%= f.label :password%>
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <%= f.password_field :password, placeholder: "Password" %>
              </div>
            </div>
                 <%= f.submit "Log In", class: 'ui fluid large teal submit button' %>
            <%end%>
          </div>
          <div class="ui error message"></div>

        <div class="ui message">
          New to us? <a href="#">Sign Up</a>
        </div>
      </div>
    </div>
  </div>